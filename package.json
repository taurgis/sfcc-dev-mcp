{
  "name": "sfcc-dev-mcp",
  "version": "1.0.0",
  "description": "MCP server for Salesforce B2C Commerce Cloud development assistance including logs, debugging, and development tools",
  "main": "dist/index.js",
  "bin": {
    "sfcc-dev-mcp": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "convert-docs": "node scripts/convert-docs.js",
    "convert-docs:test": "node scripts/convert-docs.js --test",
    "convert-docs:limit": "node scripts/convert-docs.js --limit 5",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mcp",
    "salesforce",
    "commerce-cloud",
    "sfcc",
    "development",
    "logs",
    "debugging",
    "webdav"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "commander": "^12.1.0",
    "webdav": "^5.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}
